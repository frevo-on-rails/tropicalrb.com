    <section class="talks">

      <header>
        <h2>Palestras</h2>
          <div class="schedule-subtitles">
            <small class="schedule-subtitle">
              <span class="icon-medium icon-calendar"></span><time date="2015-03-6">6 de Março • Tarde</time>
            </small>
            <small class="schedule-subtitle">
              <span class="icon-medium icon-translation"></span>Tradução Simultânea
            </small>
            <a class="schedule-subtitle" href="https://goo.gl/maps/d9Wxo" title="Veja no Google Maps." target="_blank">
              <span class="icon-medium icon-geolocal"></span><address>Summerville Beach Resort</address>
            </a>
          </div>
