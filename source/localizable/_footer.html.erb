    <div class="copy">
      <div class="previous-editions row">
        <div class="column">
          <h4 class="footer-title"><%= t 'footer.previous_editions' %>:</h4>
        </div>
        <div class="column">
          <p>
            <a href='/2012/'><strong>2012</strong></a> <span>•</span>
            <a href='/2013/'><strong>2013</strong></a> <span>•</span>
            <a href='/2014/<%= I18n.locale %>/'><strong>2014</strong></a>
