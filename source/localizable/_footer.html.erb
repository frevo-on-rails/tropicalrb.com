        <% link_to '/files/prospectus.pdf' do %>
          <strong><%= t 'footer.sponsor_prospectus' %></strong>
        <% end %>
        <br class="guava-signature">
        <%= t 'footer.signature' %> <a href="http://guava.com.br/<%= I18n.locale %>/" target="_blank"><strong>Guava Software</strong></a>
