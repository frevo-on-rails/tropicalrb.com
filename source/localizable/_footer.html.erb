        <% link_to "/#{I18n.locale}/code-of-conduct.html" do %>
          <strong><%= t 'footer.code_of_conduct' %></strong>
        <% end %>
        <br class='visible-xs-block'><span class='hidden-xs'>•</span>
        <% link_to "/#{I18n.locale}/colophon.html" do %>
          <strong><%= t 'footer.colophon' %></strong>
        <% end %>
        <br class='visible-xs-block'><span class='hidden-xs'>•</span>
        <% link_to '/files/mediakit.zip' do %>
          <strong><%= t 'footer.media_kit' %></strong>
        <% end %>
